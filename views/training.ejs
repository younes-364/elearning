<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include('partials/stylesheet') %>
  </head>

  <body>
    <!--nav bar-->

    <%- include('partials/navbarAdmin') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <div class="card shadow rounded text-center mt-5 mb-5">
            <div class="card header">Add Training</div>

            <div class="card-body">
              <form action="/add-training" method="POST">
                <div class="form-group">
                  <input
                    class="form-control"
                    type="text"
                    name="trainingTitle"
                    placeholder="TRAININ TITLE"
                  />
                  <br />
                  <textarea
                    class="form-control"
                    name="trainingDescription"
                    placeholder="TRAINING DESCRIPTION"
                  ></textarea>
                  <br />

                  <input
                    class="btn btn-primary rounded"
                    type="submit"
                    value="Add Training"
                  />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/javascript') %>
  </body>
  <%- include('partials/footer') %>
</html>
